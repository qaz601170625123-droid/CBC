      } catch(e) {}
    } else if (sd.CVSStoreID) {
      try { localStorage.setItem('ecpay_store_data', JSON.stringify(sd)); } catch(e) {}
    }
    // å€’æ•¸é—œé–‰
    var c = 2, el = document.getElementById('cd');
    var t = setInterval(function() {
      c--; el.textContent = c;
      if (c <= 0) { clearInterval(t); window.close(); }
    }, 1000);
  </script>
