export default async function handler(req, res) {
  // åªæ¥å— POST
  if (req.method !== 'POST') {
    return res.status(405).send('Method Not Allowed');
  }

  // å–å¾—ç¶ ç•Œ POST å›ä¾†çš„é–€å¸‚è³‡æ–™
  const {
    CVSStoreID = '',
    CVSStoreName = '',
    CVSAddress = '',
    CVSTelephone = '',
    MerchantTradeNo = ''
  } = req.body;

  console.log('âœ… æ”¶åˆ°ç¶ ç•Œé–€å¸‚å›å‚³');
  console.log('é–€å¸‚ä»£ç¢¼:', CVSStoreID);
  console.log('é–€å¸‚åç¨±:', CVSStoreName);
  console.log('é–€å¸‚åœ°å€:', CVSAddress);

  const storeData = JSON.stringify({ CVSStoreID, CVSStoreName, CVSAddress, CVSTelephone, MerchantTradeNo });

  // å›å‚³ HTML é é¢çµ¦å½ˆçª—é¡¯ç¤º
  const html = `<!DOCTYPE html>
<html lang="zh-TW">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>é–€å¸‚é¸æ“‡å®Œæˆ</title>
  <style>
    body {
      font-family: sans-serif;
      background: linear-gradient(135deg, #0a0a0a, #1a1a1a);
      color: #FFD700;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
    }
    .box {
      text-align: center;
      padding: 40px;
      background: rgba(255,215,0,.1);
      border: 2px solid #FFD700;
      border-radius: 20px;
      max-width: 500px;
    }
    .info {
      background: rgba(0,0,0,.3);
      padding: 20px;
